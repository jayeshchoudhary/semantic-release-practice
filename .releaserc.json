{
  "branches": "main",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "major", "scope": "repo", "release": "major" },
          { "breaking": true, "scope": "repo", "release": "major" },
          { "type": "feat", "scope": "repo", "release": "minor" },
          { "type": "fix", "scope": "repo", "release": "patch" },
          { "scope": "!repo", "release": false },
          { "type": ["chore", "refactor", "test", "wip"], "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            { "type": "major", "section": "Major" },
            { "type": "chore", "hidden": true },
            { "type": "refactor", "hidden": true },
            { "type": "test", "hidden": true },
            { "type": "wip", "hidden": true }
          ]
        },
        "parserOpts": { "headerCorrespondence": ["type", "", "subject"] }
      }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      { "addReleases": "top", "failComment": false, "successComment": false }
    ],
    [
      "@semantic-release/exec",
      {
        "successCmd": "pwd"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "chore(repo): add changelog for ${nextRelease.gitTag}",
        "assets": "CHANGELOG.md"
      }
    ],
    [
      "semantic-release-slack-bot",
      {
        "slackWebhook": "https://hooks.slack.com/services/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",
        "notifyOnSuccess": true,
        "notifyOnFail": false,
        "onSuccessTemplate": {
          "channel": "#test",
          "username": "remote-managed-ui",
          "icon_emoji": ":white_circle:",
          "text": "Testing publish `$package_name $npm_package_version`\nArtifactory: https://repo.startreedata.io/ui/repos/tree/General/startree-ui/$package_name/-/$package_name-$npm_package_version.tgz\nGithub: $repo_url/releases/tag/${nextRelease.gitTag}\n"
        }
      }
    ]
  ],
  "tagFormat": "repo-${version}"
}
